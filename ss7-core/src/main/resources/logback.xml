<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- JSON Console Appender -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>false</includeContext>
            <fieldNames>
                <level>level</level>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <version>[ignore]</version>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
            <customFields>{"service":"ss7-ha-gateway"}</customFields>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="JSON_CONSOLE"/>
    </root>
    
    <!-- Application Logger -->
    <logger name="com.company.ss7ha" level="DEBUG"/>
    
    <!-- JSS7/Mobius Logger (Quiet down unless needed) -->
    <logger name="com.mobius.software" level="INFO"/>
    <logger name="org.restcomm" level="INFO"/>
</configuration>
